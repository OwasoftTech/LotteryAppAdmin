@model Infrastructure.ViewModels.UserRoleVM

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            @if (Model.Id > 0)
            {
                <h4 class="modal-title">
                    Edit User Role
                </h4>
            }
            else
            {
                <h4 class="modal-title">
                    Add User Role
                </h4>
            }
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-12">
                    <form id="GenericForm" method="post" asp-area="Admin" asp-controller="Account" asp-action="UserRoleAddUpdate" data-ajax="true" data-ajax-begin="OnBegin" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure" enctype="multipart/form-data">
                        @if (Model.Id > 0)
                        {
                            @Html.HiddenFor(p=>p.Id)
                        }
                        <div class="form-group">
                            <label class="control-label">Role Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="label label-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
            <button type="button" onclick="SubmitForm()" id="SubmitButttonId" class="btn btn-primary font-weight-bold">Submit</button>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        jQuery.validator.unobtrusive.parse("#GenericForm");
    });
</script>